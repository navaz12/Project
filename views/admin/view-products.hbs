<section>
  <div class="container">
    <div class="row mt-5">
      <a href="/admin/add-product" class="btn btn-success ml-auto">ADD PRODUCT</a>
    </div>
    <div class="container">
      <table class="table mt-5 ">
        <thead class="mr-5">
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody class="mr-5">
          {{#each products}}
          <tr>
            <th scope="row">3</th>
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.description}}</td>
            <td><img style="width=50px;height:50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
            <td><a href="/admin/edit-product" class="btn btn-primary">Edit</a>
              <a href="admin/delet-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete{{this.name}}')">Delete</a>
                
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>